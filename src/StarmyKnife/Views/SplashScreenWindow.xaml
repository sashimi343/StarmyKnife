<Window x:Class="StarmyKnife.Views.SplashScreenWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None" ResizeMode="NoResize" AllowsTransparency="True" Background="Transparent"
        WindowStartupLocation="CenterScreen" ShowInTaskbar="False" Topmost="True" Width="400" Height="300">
    <Border CornerRadius="10" Padding="10">
        <Border.Background>
            <ImageBrush ImageSource="pack://application:,,,/StarmyKnife;component/Assets/StarmyKnifeSplash.png" Stretch="UniformToFill"/>
        </Border.Background>
        <Grid>
            <TextBlock x:Name="LogText"
                       FontSize="10"
                       Text="Starting application..."
                       TextAlignment="Center"
                       Background="Transparent"
                       VerticalAlignment="Bottom"
                       HorizontalAlignment="Stretch" />
        </Grid>
    </Border>
</Window>
